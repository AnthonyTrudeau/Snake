<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Snake" Height="450" Width="450">
    <Grid>
        <Canvas x:Name="painting_Canvas" Margin="0" MouseMove="painting_Canvas_MouseMove" Background="White" MouseLeftButtonDown="painting_Canvas_MouseLeftButtonDown">
            <Polyline Name="polyLine" Stroke="Black" Visibility="Collapsed"/>
            <Ellipse Name="snakeHead" Fill="Black" Width="20" Height="20" Canvas.Left="0" Canvas.Top="0" />
            <TextBox Height="23" Canvas.Left="184" TextWrapping="Wrap" Text="TextBox" Canvas.Top="126" Width="120" Cursor="Help" FontFamily="Sitka Display"/>
            <MediaElement Height="100" Canvas.Left="142" Canvas.Top="164" Width="100" Stretch="UniformToFill" OpacityMask="#FFF30000"/>
        </Canvas>

    </Grid>
</Window>
